<h1>Bars#index</h1>
<p>Find me in app/views/bars/index.html.erb</p>
<div class="container text-center">
 <div class="row">
    <div class="col col-lg-6">
      <% @bars.each do |bar| %>
        <p>

        </p>

          <div class="bar-card">
            <img src="https://toitoimontoit.fr/wp-content/uploads/2020/02/barabulles-2.jpg" class="bar-card-img" alt="bar-pitcure">
              <div class="bar-details">
                <div class="bar-card-flex">
                  <p class="bar-category"><em><%= bar.category %></em></p>
                  <% bar.bar_tags.each do |bar_tag| %>
                  <span>#<%= bar_tag.tag.name %></span>
                  <% end %>
                </div>
                <div class="bar-card-flex">
                  <h2 class="bar-name"><strong><%= link_to bar.name, bar_path(bar)  %></strong></h2>
                  <%# <h2 class="rating"><%= bar.reviews.last.rating %>/5</h2> %>
                </div>
                  <p class="adress"><%= bar.address %></p>
                  <p class="average-price">Prix moyen : <%= bar.average_price %>â‚¬</p>
                  <% bar.promotions.each do |promo| %>
                  <p class="promotion"><%= promo.name %></p>
                  <% end %>
              </div>
            </div>
              <% end %>
            </div>
    <div class="col col-lg-6">
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
</div>
